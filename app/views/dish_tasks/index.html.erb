<div>
  <div>
    <h1>
      List of all dish tasks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new dish task
    </h2>

    <form action="/insert_dish_task" method="post">
      <div>
        <label for="dish_id_box">
          Dish
        </label>

        <input type="text" id="dish_id_box" name="query_dish_id">
      </div>

      <div>
        <label for="task_id_box">
          Task
        </label>

        <input type="text" id="task_id_box" name="query_task_id">
      </div>

      <button>
        Create dish task
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Dish
        </th>

        <th>
          Task
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_dish_tasks.each do |a_dish_task| %>
      <tr>
        <td>
          <%= a_dish_task.id %>
        </td>

        <td>
          <%= a_dish_task.dish_id %>
        </td>

        <td>
          <%= a_dish_task.task_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_dish_task.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_dish_task.updated_at) %> ago
        </td>

        <td>
          <a href="/dish_tasks/<%= a_dish_task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
