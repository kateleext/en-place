<div>
  <div>
    <h1>
      Dish task #<%= @the_dish_task.id %> details
    </h1>

    <div>
      <div>
        <a href="/dish_tasks">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_dish_task/<%= @the_dish_task.id %>">
          Delete dish task
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Dish
      </dt>
      <dd>
        <%= @the_dish_task.dish_id %>
      </dd>

      <dt>
        Task
      </dt>
      <dd>
        <%= @the_dish_task.task_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dish_task.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_dish_task.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit dish task
    </h2>

    <form action="/modify_dish_task/<%= @the_dish_task.id %>"  method="post" >
      <div>
        <label for="dish_id_box">
          Dish
        </label>

        <input type="text" id="dish_id_box" name="query_dish_id" value="<%= @the_dish_task.dish_id %>">
      </div>

      <div>
        <label for="task_id_box">
          Task
        </label>

        <input type="text" id="task_id_box" name="query_task_id" value="<%= @the_dish_task.task_id %>">
      </div>

      <button>
        Update dish task
      </button>
    </form>
  </div>
</div>

<hr>
