<div>
  <div>
    <h1>
      List of all milestones
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new milestone
    </h2>

    <form action="/insert_milestone" method="post">
      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create milestone
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Event
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_milestones.each do |a_milestone| %>
      <tr>
        <td>
          <%= a_milestone.id %>
        </td>

        <td>
          <%= a_milestone.event_id %>
        </td>

        <td>
          <%= a_milestone.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_milestone.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_milestone.updated_at) %> ago
        </td>

        <td>
          <a href="/milestones/<%= a_milestone.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
