<div>
  <div>
    <h1>
      List of all recipe ingredients
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new recipe ingredient
    </h2>

    <form action="/insert_recipe_ingredient" method="post">
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id">
      </div>

      <div>
        <label for="ingredient_id_box">
          Ingredient
        </label>

        <input type="text" id="ingredient_id_box" name="query_ingredient_id">
      </div>

      <button>
        Create recipe ingredient
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipe
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_recipe_ingredients.each do |a_recipe_ingredient| %>
      <tr>
        <td>
          <%= a_recipe_ingredient.id %>
        </td>

        <td>
          <%= a_recipe_ingredient.recipe_id %>
        </td>

        <td>
          <%= a_recipe_ingredient.ingredient_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_recipe_ingredient.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_recipe_ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/recipe_ingredients/<%= a_recipe_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
