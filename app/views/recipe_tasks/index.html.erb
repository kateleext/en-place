<div>
  <div>
    <h1>
      List of all recipe tasks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new recipe task
    </h2>

    <form action="/insert_recipe_task" method="post">
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id">
      </div>

      <div>
        <label for="task_id_box">
          Task
        </label>

        <input type="text" id="task_id_box" name="query_task_id">
      </div>

      <button>
        Create recipe task
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipe
        </th>

        <th>
          Task
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_recipe_tasks.each do |a_recipe_task| %>
      <tr>
        <td>
          <%= a_recipe_task.id %>
        </td>

        <td>
          <%= a_recipe_task.recipe_id %>
        </td>

        <td>
          <%= a_recipe_task.task_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_recipe_task.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_recipe_task.updated_at) %> ago
        </td>

        <td>
          <a href="/recipe_tasks/<%= a_recipe_task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
