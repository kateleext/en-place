<div>
  <div>
    <h1>
      Recipe task #<%= @the_recipe_task.id %> details
    </h1>

    <div>
      <div>
        <a href="/recipe_tasks">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_recipe_task/<%= @the_recipe_task.id %>">
          Delete recipe task
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Recipe
      </dt>
      <dd>
        <%= @the_recipe_task.recipe_id %>
      </dd>

      <dt>
        Task
      </dt>
      <dd>
        <%= @the_recipe_task.task_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_recipe_task.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_recipe_task.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit recipe task
    </h2>

    <form action="/modify_recipe_task/<%= @the_recipe_task.id %>"  method="post" >
      <div>
        <label for="recipe_id_box">
          Recipe
        </label>

        <input type="text" id="recipe_id_box" name="query_recipe_id" value="<%= @the_recipe_task.recipe_id %>">
      </div>

      <div>
        <label for="task_id_box">
          Task
        </label>

        <input type="text" id="task_id_box" name="query_task_id" value="<%= @the_recipe_task.task_id %>">
      </div>

      <button>
        Update recipe task
      </button>
    </form>
  </div>
</div>

<hr>
